generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  name        String
  role        Role         @default(AUTHOR)
  articles    Article[]
  submissions Submission[]
  createdAt   DateTime     @default(now())
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  authors   String
  abstract  String
  pdfUrl    String
  status    Status   @default(SUBMITTED)
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Submission {
  id        Int      @id @default(autoincrement())
  title     String
  authors   String
  abstract  String
  pdfUrl    String
  status    Status   @default(SUBMITTED)
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  authors     String
  description String
  pdfUrl      String?
  createdAt   DateTime @default(now())
}

model Transaction {
  id        Int               @id @default(autoincrement())
  reference String
  amount    Float
  status    TransactionStatus @default(PENDING)
  date      DateTime          @default(now())
  payments  Payment[]
}

model Payment {
  id     Int         @id @default(autoincrement())
  tx     Transaction @relation(fields: [txId], references: [id])
  txId   Int
  amount Float
  paidAt DateTime    @default(now())
}

model Conference {
  id          Int       @id @default(autoincrement())
  name        String
  location    String?
  date        DateTime?
  description String?
  createdAt   DateTime  @default(now())
}

model Journal {
  id        Int      @id @default(autoincrement())
  name      String
  issn      String?
  url       String?
  domain    Domain?  @relation(fields: [domainId], references: [id])
  domainId  Int?
  createdAt DateTime @default(now())
}

model Domain {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  journals  Journal[]
  createdAt DateTime  @default(now())
}

enum Role {
  AUTHOR
  ADMIN
  EDITOR
}

enum Status {
  SUBMITTED
  ACCEPTED
  PUBLISHED
  REJECTED
}

enum TransactionStatus {
  PENDING
  PAID
  FAILED
}
