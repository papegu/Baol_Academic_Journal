generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(AUTHOR)
  articles  Article[]
  createdAt DateTime @default(now())
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  authors   String
  abstract  String
  pdfUrl    String
  status    Status   @default(SUBMITTED)
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  AUTHOR
  ADMIN
}

enum Status {
  SUBMITTED
  ACCEPTED
  PUBLISHED
  REJECTED
}
