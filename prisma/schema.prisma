generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  name        String
  role        Role         @default(AUTHOR)
  articles    Article[]
  submissions Submission[]
  alerts      CommunityAlert[]
  createdAt   DateTime     @default(now())
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  authors   String
  abstract  String
  pdfUrl    String
  status    Status   @default(SUBMITTED)
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Submission {
  id        Int      @id @default(autoincrement())
  title     String
  authors   String
  abstract  String
  pdfUrl    String
  status    Status   @default(SUBMITTED)
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  authors     String
  description String
  pdfUrl      String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Transaction {
  id        Int               @id @default(autoincrement())
  reference String
  amount    Float
  status    TransactionStatus @default(PENDING)
  date      DateTime          @default(now())
  payments  Payment[]
}

model Payment {
  id     Int         @id @default(autoincrement())
  tx     Transaction @relation(fields: [txId], references: [id])
  txId   Int
  amount Float
  paidAt DateTime    @default(now())
}

model Conference {
  id          Int       @id @default(autoincrement())
  name        String
  location    String?
  date        DateTime?
  description String?
  createdAt   DateTime  @default(now())
}

model Journal {
  id        Int      @id @default(autoincrement())
  name      String
  issn      String?
  url       String?
  domain    Domain?  @relation(fields: [domainId], references: [id])
  domainId  Int?
  createdAt DateTime @default(now())
}

model Domain {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  journals  Journal[]
  createdAt DateTime  @default(now())
}

enum Role {
  AUTHOR
  ADMIN
  EDITOR
}

enum Status {
  SUBMITTED
  ACCEPTED
  PUBLISHED
  REJECTED
}

enum TransactionStatus {
  PENDING
  PAID
  FAILED
}

// New enums for agroecological monitoring
enum RiskLevel {
  LOW
  MEDIUM
  HIGH
  EXTREME
}

enum SatelliteSource {
  SENTINEL1
  SENTINEL2
  MODIS
  OTHER
}

enum RiskType {
  DROUGHT
  FLOOD
  SOIL_DEGRADATION
  LOCUST
  OTHER
}

enum AlertStatus {
  NEW
  PROCESSING
  RESOLVED
  REJECTED
}

// Optional user and observation location
model Location {
  id         Int       @id @default(autoincrement())
  region     String?
  department String?
  latitude   Float?
  longitude  Float?
  meta       Json?
  alerts     CommunityAlert[]
  zones      Zone[]
  createdAt  DateTime  @default(now())
}

// Geographical zone for observations
model Zone {
  id          Int                     @id @default(autoincrement())
  name        String
  region      String?
  department  String?
  geometry    Json?
  location    Location?               @relation(fields: [locationId], references: [id])
  locationId  Int?
  erosions    SoilErosionObservation[]
  locusts     LocustObservation[]
  riskEvents  AgroRiskEvent[]
  alerts      CommunityAlert[]
  createdAt   DateTime                @default(now())
}

// Soil erosion observations with derived indices
model SoilErosionObservation {
  id              Int             @id @default(autoincrement())
  zone            Zone            @relation(fields: [zoneId], references: [id])
  zoneId          Int
  riskLevel       RiskLevel       @default(MEDIUM)
  satelliteSource SatelliteSource @default(OTHER)
  ndvi            Float?
  ndwi            Float?
  slope           Float?
  rainfall        Float?
  observedAt      DateTime        @default(now())
  source          String?
}

// Locust observations with movement characteristics
model LocustObservation {
  id         Int       @id @default(autoincrement())
  zone       Zone      @relation(fields: [zoneId], references: [id])
  zoneId     Int
  speed      Float?
  direction  String?
  intensity  Float?
  path       Json?
  observedAt DateTime  @default(now())
}

// Agroecological risk events (drought, flood, soil degradation, etc.)
model AgroRiskEvent {
  id         Int        @id @default(autoincrement())
  zone       Zone       @relation(fields: [zoneId], references: [id])
  zoneId     Int
  type       RiskType
  severity   Float?
  startDate  DateTime?
  endDate    DateTime?
  notes      String?
  createdAt  DateTime   @default(now())
}

// Community alerts reported by populations
model CommunityAlert {
  id          Int          @id @default(autoincrement())
  reporter    User?        @relation(fields: [reporterId], references: [id])
  reporterId  Int?
  zone        Zone?        @relation(fields: [zoneId], references: [id])
  zoneId      Int?
  location    Location?    @relation(fields: [locationId], references: [id])
  locationId  Int?
  riskType    RiskType
  status      AlertStatus  @default(NEW)
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}
